<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sachin.gothamv2.Record"
    android:background="@color/accent_material_light">

    <com.jjoe64.graphview.GraphView
        android:layout_width="match_parent"
        android:layout_height="115dip"
        android:id="@+id/graph_1"
        android:layout_below="@+id/read_text_2"
        android:layout_alignParentLeft="true"
        android:layout_above="@+id/submit_a"
        android:layout_toLeftOf="@+id/record_2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Reading "
        android:id="@+id/read_text_1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/record_1"
        android:layout_below="@+id/read_text_1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="38dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/save_1"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/record_1"
        android:layout_alignRight="@+id/record_1"
        android:layout_alignEnd="@+id/record_1" />


    <com.jjoe64.graphview.GraphView
        android:layout_width="match_parent"
        android:layout_height="115dip"
        android:id="@+id/graph_2"
        android:layout_alignTop="@+id/record_1"
        android:layout_toLeftOf="@+id/record_1"
        android:layout_above="@+id/read_text_2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Second Reading"
        android:id="@+id/read_text_2"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/record_2"
        android:layout_alignTop="@+id/graph_1"
        android:layout_alignLeft="@+id/save_2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/save_2"
        android:layout_above="@+id/submit_a"
        android:layout_toRightOf="@+id/graph_2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Analyze"
        android:id="@+id/submit_a"
        android:onClick="Analyse"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/record_2" />

</RelativeLayout>
